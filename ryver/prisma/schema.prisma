datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int     @id @default(autoincrement())
  email       String  @unique
  name        String?
  clerkUserId String  @unique
  // Placeholder for future Oanda-related fields
  // oandaAccountId: String? (to be added later)
  // oandaApiKey: String? (to be added later)
}
